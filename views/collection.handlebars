<div class="uk-container">
    <a href="/logout" class="uk-button uk-button-primary uk-button-large uk-align-right">Logout</a>
</div>
<div class="uk-container" id="collectionPage">
    <div class="my-container uk-margin-large-top ">
        <div class="container-inner-border add_card">
            <div class="row">
                <h1>{{userInfo.firstName}}'s Collection</h1>
                <h3 id="favoriteCard">Click on a Card to Add it to your Favorites!</h3>
            </div>
            <div class="uk-alert-success" id="alert" uk-alert>
                <a class="uk-alert-close" uk-close></a>
                <p class="alertText">Card added to Favorites!</p>
            </div>
            <div class="row">
                <fieldset class="searchFields">
                    <form class="uk-form">
                        <div class="search-filter uk-align-right">
                            <div class="uk-inline">
                                <button class="uk-button uk-button-primary" type="button" id="addCardFilter">Filter by
                                    type:</button>
                                <div uk-dropdown="pos: bottom-justify">
                                    <ul class="uk-nav uk-dropdown-nav">
                                        <li class="uk-nav-header">Sort by:</li>
                                        <li><a href="#">All Cards</a></li>
                                        <li><a href="#">Favorites</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </form>
                </fieldset>
            </div>
            <div class="row">
                <div class="uk-column-1-4">
                    {{#each pokemon}}
                    <input type="image" data-favorite={{favorite}} class="pokemonCards" id="{{this.id}}" src="{{this.card_img}}">
                        
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="uk-container uk-align-center">
    <a href="/add-card" class="uk-button uk-button-primary uk-button-large uk-align-left">Add New Card</a>
    <a href="/update" class="uk-button uk-button-primary uk-button-large uk-align-right">Delete a Card</a>
</div>
 <script type="text/javascript" src="../assets/js/collection.js"></script> 